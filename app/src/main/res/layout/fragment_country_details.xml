<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.countrydetails.CountryDetails">
    <LinearLayout
            android:id="@+id/nameContainer"
            android:orientation="horizontal"
            android:layout_width="500dp"
            android:weightSum="1"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="NAME"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/name"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="NAME"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/regionContainer"
            android:layout_below="@id/nameContainer"
            android:orientation="horizontal"
            android:layout_width="500dp"
            android:weightSum="1"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="REGION"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/region"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="NAME"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/capitalContainer"
            android:layout_below="@id/regionContainer"
            android:orientation="horizontal"
            android:layout_width="500dp"
            android:weightSum="1"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="CAPITAL"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/capital"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="NAME"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/populationContainer"
            android:layout_below="@id/capitalContainer"
            android:orientation="horizontal"
            android:layout_width="500dp"
            android:weightSum="1"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="POPULATION"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/population"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:text="NAME"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/countryFlag"
            android:layout_below="@id/populationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>